.bj-page-header.i-header10
  
  .bj-page-header__body
    height 100px
    
  .bj-page-header__content
    padding-top 22px
    
    @media( max-width 767px )
      padding-top 33px
      
  .bj-page-header__menu
    width 212px
    
    @media( max-width 1199px )
      width 172px
    
  .bj-page-header__menu-icon
    margin 0 32px 0 0
    
    @media( max-width 767px )
      margin 0
    
  .bj-page-header__bottom-menu
    background-color #000099
  
    @media( max-width 767px )
      display none

    menu
      display flex
      flex-wrap wrap
      justify-content space-between
      height 50px
      text-transform uppercase
      align-items center
      overflow hidden
      margin 0 -10px
      
    li
      margin 0 10px
    
      @media( max-width 1199px )
        &
          display none
          
        &:nth-of-type(1),
        &:nth-of-type(2),
        &:nth-of-type(3),
        &:nth-of-type(4),
        &:last-child
          display list-item
      
    a,
    a:hover,
    a:active,
    a:focus
      color #fff
      white-space nowrap
